<profile name="internal">
    <settings>

        <!-- NETWORK / BINDING -->
        <param name="sip-port" value="$${SIP_UDP_PORT}"/>
        <param name="sip-ip" value="$${local_ip_v4}"/>
        <param name="rtp-ip" value="$${local_ip_v4}"/>

        <!-- TRANSPORT -->
        <param name="transport" value="udp"/>

        <!-- REALM / DOMAIN -->
        <param name="domain" value="$${SIP_REALM}"/>
        <param name="force-register-domain" value="$${SIP_REALM}"/>

        <!-- AUTH / DIRECTORY -->
        <param name="auth-calls" value="true"/>
        <param name="manage-presence" value="true"/>

        <!-- CONTEXT -->
        <param name="context" value="$${SIP_CONTEXT}"/>

        <!-- NAT / DOCKER -->
        <param name="aggressive-nat-detection" value="true"/>
        <param name="apply-nat-acl" value="nat.auto"/>
        <param name="local-network-acl" value="localnet.auto"/>

        <!-- CODECS -->
        <param name="inbound-codec-prefs" value="opus,PCMU,PCMA"/>
        <param name="outbound-codec-prefs" value="opus,PCMU,PCMA"/>

        <!-- REGISTRATION -->
        <param name="multiple-registrations" value="true"/>
        <param name="accept-blind-reg" value="false"/>
        <param name="accept-blind-auth" value="false"/>

        <!-- RTP -->
        <param name="rtp-timeout-sec" value="300"/>
        <param name="rtp-hold-timeout-sec" value="1800"/>

        <!-- LOGGING -->
        <param name="debug" value="0"/>
        <param name="sip-trace" value="no"/>

    </settings>
</profile>
